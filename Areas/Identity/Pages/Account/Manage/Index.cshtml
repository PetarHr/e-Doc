@page
@inject UserManager<ApplicationUser> userManager
@model IndexModel
@{
    ViewData["Title"] = "Моят профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<hr />
<div class="d-flex flex-column align-items-center text-center">
    <vc:user-profile user="@userManager.GetUserId(this.User)" />
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="input-group">
                <div class="custom-file">
                    <input asp-for="Input.ProfilePicture" class="custom-file-input" id="profileUpload">
                    <label class="custom-file-label" for="profileUpload">Избери файл</label>
                </div>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Обнови профил</button>
        </form>
    </div>

    <div class="col-md-6">
        <form id="address-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Country.Name"></label>
                <input asp-for="Input.UserAddress.Country.Name" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Country.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Region.Name"></label>
                <input asp-for="Input.UserAddress.Region.Name" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Region.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Municipality.Name"></label>
                <input asp-for="Input.UserAddress.Municipality.Name" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Municipality.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.City"></label>
                <input asp-for="Input.UserAddress.City" class="form-control" />
                <span asp-validation-for="Input.UserAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Street"></label>
                <input asp-for="Input.UserAddress.Street" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.StreetNumber"></label>
                <input asp-for="Input.UserAddress.StreetNumber" class="form-control" />
                <span asp-validation-for="Input.UserAddress.StreetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Floor"></label>
                <input asp-for="Input.UserAddress.Floor" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Apartment"></label>
                <input asp-for="Input.UserAddress.Apartment" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Apartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Entrance"></label>
                <input asp-for="Input.UserAddress.Entrance" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Entrance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserAddress.Comment"></label>
                <input asp-for="Input.UserAddress.Comment" class="form-control" />
                <span asp-validation-for="Input.UserAddress.Comment" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Обнови адрес</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@using eDoc.Models.View.Pharmacist
@model MyWorkListViewModel 

    <h1>Фармацевт @Model.PharmacistName (@Model.WorkplaceName)</h1>
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Пациент</th>
                <th scope="col">Доктор</th>
                <th scope="col">Издадена на</th>
                <th scope="col">Изпълнена</th>
                <th scope="col">За многократно изпълнение</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.RecipesList)
            {
                <tr>
                    <td>@recipe.RecipeId</td>
                    <td>@recipe.PatientFullName</td>
                    <td>@recipe.DoctorFullName</td>
                    <td>@recipe.CreatedOn</td>
                    <td>@recipe.Completed</td>
                    <td>@recipe.AllowMultiCompletion</td>
                    <td>
                        <a class="btn btn-primary" type="button" asp-controller="Pharmacist" asp-action="Find" asp-route-id="@recipe.RecipeId">Детайли</a>
                    </td>
                </tr>
            }
            @if (Model.RecipesList.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <span class="text-danger">Не са открити налични рецепти.</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
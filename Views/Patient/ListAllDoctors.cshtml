@model List<eDoc.Models.View.DoctorsListViewModel>


    <div class="card-columns">
        @foreach (var doctor in Model)
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Профилна снимка">
                <div class="card-body">
                    <h5 class="card-title">Име: @doctor.FullName</h5>
                    <p class="card-text">Специалност: @doctor.Specialty</p>
                    <p class="card-text">Телефон: @doctor.ContactPhone</p>
                    <p class="card-text">Е-мейл: @doctor.ContactEmail</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Медицински център: @doctor.MedicalCenter</li>
                    <li class="list-group-item">Адрес: @doctor.WorkplaceAddress</li>
                </ul>
                <div class="card-body">
                    <a class="card-link" asp-controller="Patient" asp-action="AssignDoctor" asp-route-doctorId="@doctor.Id">Запиши ме!</a>
                </div>
            </div>
        }
    </div>





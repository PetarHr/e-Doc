@model eDoc.Models.View.MyDoctorViewModel

    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <div class="mt-3">
                    <h4>@Model.DoctorFullName</h4>
                    <p class="text-secondary mb-1">@Model.DoctorMedicalCenterName</p>
                    <p class="text-muted font-size-sm">@Model.DoctorMedicalCenterAddress</p>
                    <a asp-controller="Patient" asp-action="ListAllDoctors" class="btn btn-outline-primary">Промени</a>
                    <a asp-controller="Patient" asp-action="RemoveMyDoctor" class="btn btn-outline-danger">Премахни</a>
                </div>
            </div>
        </div>
    </div>